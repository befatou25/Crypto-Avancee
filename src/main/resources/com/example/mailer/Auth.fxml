<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mailer.controllers.AuthController">
    <AnchorPane id="loginAnchor" fx:id="anchorPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #fff;">
        <children>
            <Label id="title" layoutX="181.0" layoutY="54.0" text="Crypto mailer">
            <font>
               <Font name="System Bold Italic" size="35.0" />
            </font></Label>
           <TextField id="usernameTextField" fx:id="usernameTextField" layoutX="225.0" layoutY="123.0" promptText="username" GridPane.columnIndex="1">
            <font>
               <Font size="13.0" />
            </font></TextField>
            <PasswordField id="passwordField" fx:id="passwordField" layoutX="225.0" layoutY="169.0" promptText="password" GridPane.columnIndex="1">
            <font>
               <Font size="13.0" />
            </font></PasswordField>
            <Button id="login" fx:id="login" layoutX="251.0" layoutY="237.0" mnemonicParsing="false" onAction="#Login" text="Se Connecter" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <font>
               <Font name="System Bold" size="14.0" />
            </font></Button>
            <ProgressIndicator fx:id="progressIndicator" layoutX="274.0" layoutY="148.0" scaleX="2.0" scaleY="2.0" visible="false" />

        </children>
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>
    </AnchorPane>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
